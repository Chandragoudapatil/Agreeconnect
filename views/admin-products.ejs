<!DOCTYPE html>
<html>

<head>
    <title>Admin - Products</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body class="admin">

    <div class="container">
        <div class="sidebar">
            <h2 class="highlight">Admin</h2>
            <a href="/admin">Dashboard</a>
            <a href="/admin/users">Users</a>
            <a href="/admin/products" class="active">Products</a>
            <a href="/admin/orders">Orders</a>
            <a class="logout" href="/auth/logout">Logout</a>
        </div>

        <div class="main">
            <div class="topbar">
                <h2>Manage Products</h2>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Farmer</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length> 0) { %>
                            <% products.forEach(p=> { %>
                                <tr>
                                    <td>
                                        <%= p.name %>
                                    </td>
                                    <td>â‚¹<%= p.price || p.basePrice || 0 %>
                                    </td>
                                    <td>
                                        <span class="badge <%= p.status === 'OPEN' ? 'success' : 'danger' %>">
                                            <%= p.status %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= p.farmerId ? p.farmerId.name : 'Unknown' %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4">No products found.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>