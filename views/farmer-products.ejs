<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Products - Farmer Dashboard</title>
  <link rel="stylesheet" href="/css/dashboard.css">
  <style>
    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .product-card {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s, box-shadow 0.3s;
      border-left: 4px solid #2e7d32;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .product-name {
      font-size: 20px;
      font-weight: 700;
      color: #2e7d32;
      margin-bottom: 12px;
    }

    .product-details {
      display: flex;
      justify-content: space-between;
      margin: 10px 0;
      padding: 8px 0;
      border-bottom: 1px solid #f0f0f0;
    }

    .product-details:last-child {
      border-bottom: none;
    }

    .detail-label {
      color: #666;
      font-size: 14px;
    }

    .detail-value {
      font-weight: 600;
      color: #333;
      font-size: 16px;
    }

    .price-value {
      color: #2e7d32;
      font-size: 24px;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-open {
      background: #e8f5e9;
      color: #2e7d32;
    }

    .status-closed {
      background: #ffebee;
      color: #c62828;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .empty-state-icon {
      font-size: 64px;
      margin-bottom: 20px;
      opacity: 0.3;
    }

    .empty-state h3 {
      color: #666;
      margin-bottom: 10px;
    }

    .empty-state p {
      color: #999;
      margin-bottom: 20px;
    }

    .btn-add {
      display: inline-block;
      padding: 12px 24px;
      background: linear-gradient(135deg, #2e7d32 0%, #4caf50 100%);
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: transform 0.2s;
    }

    .btn-add:hover {
      transform: translateY(-2px);
    }
  </style>
</head>

<body class="farmer">

  <div class="container">
    <div class="sidebar">
      <h2 class="highlight">Farmer</h2>
      <a href="/farmer">Dashboard</a>
      <a href="/farmer/add-product">Add Product</a>
      <a href="/farmer/products" style="background: #e8f5e9; color: #2e7d32; font-weight: 600;">My Products</a>
      <a href="/farmer/orders">Orders</a>
      <a href="/auth/logout" style="color: #d32f2f; margin-top: 20px;">Logout</a>
    </div>

    <div class="main">
      <div class="topbar">
        <h2>My Products</h2>
        <span>Welcome <%= user ? user.name : 'Farmer' %></span>
      </div>

      <% if (typeof msg !=='undefined' && msg) { %>
        <div
          style="background-color: #e8f5e9; color: #2e7d32; padding: 15px; border-radius: 8px; margin-bottom: 20px; font-weight: bold;">
          <%= msg %>
        </div>
        <% } %>

          <% if (!products || products.length===0) { %>
            <div class="empty-state">
              <div class="empty-state-icon">ðŸ“¦</div>
              <h3>No Products Yet</h3>
              <p>Start by adding your first product to the marketplace</p>
              <a href="/farmer/add-product" class="btn-add">Add Your First Product</a>
            </div>
            <% } else { %>
              <div class="products-grid">
                <% products.forEach(p=> { %>
                  <div class="product-card">
                    <div class="product-name">
                      <%= p.name %>
                    </div>

                    <div class="product-details">
                      <span class="detail-label">Base Price</span>
                      <span class="detail-value text-muted">â‚¹<%= p.basePrice || 0 %></span>
                    </div>

                    <div class="product-details">
                      <span class="detail-label">Current Bid</span>
                      <span class="detail-value price-value">â‚¹<%= p.currentBid || 0 %></span>
                    </div>

                    <div class="product-details">
                      <span class="detail-label">Quantity</span>
                      <span class="detail-value">
                        <%= p.quantity || 0 %>
                          <%= p.unitSize ? `(${p.unitSize})` : 'units' %>
                      </span>
                    </div>

                    <div class="product-details">
                      <span class="detail-label">Status</span>
                      <span
                        class="status-badge <%= (p.status === 'OPEN' || !p.status) ? 'status-open' : 'status-closed' %>">
                        <%= p.status || 'OPEN' %>
                      </span>
                    </div>

                    <!-- Sell Button Logic -->
                    <% if ((p.status==='OPEN' || !p.status) && p.currentBid>= p.basePrice && p.listingType !== 'FIXED')
                      { %>
                      <div style="margin-top: 15px; text-align: center;">
                        <form action="/farmer/product/<%= p._id %>/sell" method="POST">
                          <button type="submit" class="btn-add"
                            style="width: 100%; border: none; cursor: pointer; background: #2e7d32;">
                            Accept Highest Bid
                          </button>
                        </form>
                      </div>
                      <% } %>

                        <% if (p.status==='SOLD' ) { %>
                          <div style="margin-top: 15px; text-align: center; color: #666; font-weight: bold;">
                            Sold to Buyer
                          </div>
                          <% } %>
                  </div>

                  <!-- Delete Button (Always available unless Order started/Sold - or even if Sold, simplified) -->
                  <div style="margin-top: 10px; text-align: center;">
                    <form action="/farmer/product/<%= p._id %>/delete" method="POST"
                      onsubmit="return confirm('Delete this product/listing?');">
                      <button type="submit"
                        style="background: transparent; color: #d32f2f; border: 1px solid #d32f2f; padding: 8px 16px; border-radius: 6px; cursor: pointer; width: 100%;">
                        Delete Listing
                      </button>
                    </form>
                  </div>

              </div>
              <% }) %>
    </div>
    <% } %>
  </div>
  </div>

</body>

</html>